{% extends 'base.html.twig' %}
{% block title %} {% trans %} Declare a suspicious case {% endtrans %}{% endblock %}
{#{% block stylesheets %}#}
{#    {{ parent() }}#}
{#    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">#}
{#{% endblock %}#}
{% block body %}

    <h1 class="text-center">{% trans %}declare_suspicious{% endtrans %}</h1>

    <div class="alert alert-warning" role="alert">
        {% trans %}suspiscious_text{% endtrans %}
    </div>
    <div class="suspicious-form-container ">

        <div class="row justify-content-center">
            <div class="col-12">
                {{ form_start(form) }}


                <div class="container-fluid">
                    <h2>{% trans %}personal_infos{% endtrans %}</h2>

                    <div class="row">
                        <div class="col-6">
                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                            {{ form_row(form.sex) }}
                            {{ form_row(form.bithdate) }}
                            {{ form_row(form.address) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.phone) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.otherNumber) }}
                            {{ form_row(form.referentDoctor) }}
                        </div>
                    </div>


                </div>

                <div class="container-fluid ">
                    <h2>{% trans %}background_infos{% endtrans %}</h2>

                    {{ form_row(form.pregnant) }}
                    {{ form_row(form.background ) }}
                    <div class="row">
                        {{ form_rest(form) }}
                    </div>
                </div>

                <input type="submit" class="btn btn-primary" value="Save">
            </div>

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('.js-datepicker').datepicker();
        });
    </script>
{% endblock %}